{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build",
    "resolveJsonModule":true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": [
    "lesson-test/src/**/*.ts",
    "lesson-test/src/**/*.js"
  ],
  "exclude": ["**/*.test.ts", "**/*.test.js",
    "../node_modules"
  ]
}